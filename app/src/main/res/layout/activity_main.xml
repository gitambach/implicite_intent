<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="407dp"
        android:layout_height="727dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/imp_intent"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:background="@android:color/holo_blue_bright"
            android:gravity="center"
            android:text="implicit intent"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editTextTextP1"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:ems="10"
            android:text="@string/link"
            android:gravity="center"
            android:inputType="textPersonName"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_open_web"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_purple"
            android:text="open website"
            android:onClick="openWebsite"/>

        <EditText
            android:id="@+id/editTextTextP2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="@string/golden"
            android:gravity="center"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btn_open_loc"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_purple"
            android:text="open location"
            android:onClick="openLocation"/>

        <EditText
            android:id="@+id/editTextTextP3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="@string/brill"
            android:gravity="center"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btn_share"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_purple"
            android:text="Share This text"
            android:onClick="shareText"/>

        <Button
            android:id="@+id/btn_pictur"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:onClick="opencam"
            android:text=" Take picture" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>